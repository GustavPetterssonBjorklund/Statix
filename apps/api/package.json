{
  "name": "@statix/api",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "dotenv -e ../../.env -- tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prisma:generate": "dotenv -e ../../.env -- prisma generate --schema ./prisma/schema.prisma",
    "prisma:migrate": "dotenv -e ../../.env -- prisma migrate dev --schema ./prisma/schema.prisma",
    "prisma:migrate:reset": "dotenv -e ../../.env -- prisma migrate reset --schema ./prisma/schema.prisma",
    "prisma:studio": "dotenv -e ../../.env -- prisma studio --schema ./prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@statix/shared": "workspace:*",
    "argon2": "^0.44.0",
    "fastify": "^5.7.0",
    "mqtt": "^5.10.0",
    "pg": "^8.11.0",
    "ulid": "^3.0.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0",
    "prisma": "^6.5.0",
    "tsx": "^4.7.0",
    "typescript": "^5.5.0"
  }
}
